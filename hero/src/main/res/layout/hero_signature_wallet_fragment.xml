<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wallet_home_fragment_title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="@color/c4"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/wallet_home_fragment_title_rl"
        android:id="@+id/wallet_home_fragment_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wallet_icon_iv"
            android:background="@drawable/wallet_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/wallet_home_title_tv"
            android:layout_toRightOf="@+id/wallet_home_icon_iv">

            <TextView
                android:id="@+id/wallet_hash_tv"
                android:layout_width="280dp"
                android:layout_centerInParent="true"
                android:lines="2"
                android:layout_height="wrap_content"
                android:textColor="@color/c4"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.1"
                android:text=""/>

            <ImageView
                android:id="@+id/wallet_hash_qrcode_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wallet_home_qrcode_icon"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="22dp"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/wallet_modify_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textSize="16sp"
            android:drawableBottom="@drawable/sign_line"
            android:drawableRight="@drawable/goto_right_arrow"
            android:drawablePadding="12dp"
            android:text="修改密码"/>

        <TextView
            android:id="@+id/wallet_export_privatekey_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:drawableBottom="@drawable/sign_line"
            android:drawableRight="@drawable/goto_right_arrow"
            android:drawablePadding="12dp"
            android:text="导出私钥"/>

        <TextView
            android:id="@+id/wallet_export_keystore_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:drawableBottom="@drawable/sign_line"
            android:drawableRight="@drawable/goto_right_arrow"
            android:drawablePadding="12dp"
            android:text="导出keystore"/>

    </LinearLayout>

    <Button
        android:id="@+id/wallet_home_delete_bt"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="44dp"
        android:background="@drawable/sign_confirm_button"
        android:text="删除钱包"
        android:textColor="@color/heroWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textSize="18sp" />

</RelativeLayout>